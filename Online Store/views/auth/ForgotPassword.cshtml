@{
    ViewBag.Title = "Forgot Password | Online";
    Layout = "~/views/_restricted.cshtml";
}

@model Online_Store.pagemodels.ForgotPassword;
<div class="container mt-5">

    <h1 class="text-center text-info">@Model.message</h1>
    @{
        string formPath = "/Auth/ForgotPassword";
        if(@Model.message.Equals("Sucess! Token accepted please enter user details"))
        {
            formPath = "/Auth/SetPassword";
        }
    }
    <form action="@formPath" method="post" autocomplete="on">
        <div class="form-group">
            <label for="exampleInputEmail1">Email address</label>
            <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="username" placeholder="Enter email" autocomplete="username">
        </div>
        @if(@Model.showSetPassword){
        <div class="form-group">
            <label for="exampleInputEmail1">Password</label>
            <input type="password" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="password" placeholder="Enter New Password" autocomplete="new-password">
        </div>
        }
        <button type="submit" class="btn btn-md btn-primary w-100 mt-3">Submit</button>
    </form>
    <p>Go back and login if browser didn't redirect<a href="/Login"> here.</a></p>
</div>

<style>

    body {
        background-color: aquamarine;
    }

    p {
        font-weight: bold;
    }

    .container {
        background-color: white;
        border-radius: 2%;
        border: groove;
        padding: 2rem 2rem;
    }
</style>

