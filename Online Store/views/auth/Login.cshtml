@{
    ViewBag.Title = "Login | Online";
    Layout = "~/views/_restricted.cshtml";
}

@model Online_Store.pagemodels.Login;
<div class="container mt-5">

    <p class="text-danger d-inline">@Model.message @{
        if(Model.message.IndexOf("email") != -1){
           <span style="color: black;">Click <a href="/Email?success=false&message=3">here.</a></span>
        }
    }
    </p>
    <h1>Login to Your Online Store</h1>
    <form action="/Auth/Login" method="post">
        <div class="form-group">
            <label for="exampleInputEmail1">Email address</label>
            <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="username" placeholder="Enter email" autocomplete="username" required>
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Password</label>
            <input type="password" class="form-control" id="exampleInputPassword1" name="password" autocomplete="current-password" placeholder="Password" required>
        </div>
        <button type="submit" class="btn btn-md btn-primary w-100 mt-3">Submit</button>
        <p>Don't have an account? Make one <a href="/Signup">here</a>.</p>
        <div class="mt-2 mb-2"></div>
        <p>Forgot Password? Reset it <a href="/ForgotPassword">here</a>.</p>
    </form>
</div>

<style>

    body{
        background-color: aquamarine;
    }

    p{
        font-weight:bold;
    }

    .container{
        background-color: white;
        border-radius: 2%;
        border: groove;
        padding: 2rem 2rem;
    }
</style>

