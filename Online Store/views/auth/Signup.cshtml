@{
    ViewBag.Title = "Signup | Online";
    Layout = "~/views/_restricted.cshtml";
}
@model Online_Store.pagemodels.Signup;

<section class="" style="background-color: #eee;">
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-12 col-xl-11">
                <div class="card text-black" style="border-radius: 25px;">
                    <div class="card-body p-md-5">
                        <div class="row justify-content-center">
                            <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                                @{
                                    if (Model.error)
                                    {
                                        <p class="text-center fw-bold mb-5 mx-1 mx-md-4 mt-4 text-danger">@Model.Message</p>
                                    }
                                    else
                                    {
                                        <p class="text-center fw-bold mb-5 mx-1 mx-md-4 mt-4 text-success">@Model.Message</p>

                                        if (!@Model.Message.Equals(""))
                                        {
                                            <button onclick="window.location.assign('/Email?success=false&message=3')" class="btn btn-primary">Change Email & Reverify</button>
                                        }
                                    }
                                }
                                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4 text-success">Sign up</p>
                                <form enctype="multipart/form-data" class="mx-1 mx-md-4" action="/Auth/Signup" method="post">

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <input type="text" id="form3Example1c" class="form-control" name="firstName" autocomplete="name" required />
                                            <label class="form-label" for="form3Example1c">Your First Name</label>
                                        </div>
                                        <div class="w-25"></div>
                                        <div class="form-outline flex-fill mb-0">
                                            <input type="text" id="form3Example1cd" class="form-control" name="lastName" required />
                                            <label class="form-label" for="form3Example1cd">Your Last Name</label>
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <input type="email" id="form3Example3c" class="form-control" name="email" required />
                                            <label class="form-label" for="form3Example3c">Your Email<br /><small>This will be verfied using a link sent to that email.</small></label>
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <input type="password" id="form3Example4c" class="form-control" name="password" autocomplete="new-password" required />
                                            <label class="form-label" for="form3Example4c">Password</label>
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <input type="password" id="form3Example4cd" class="form-control" name="confPassword" autocomplete="new-password" required />
                                            <label class="form-label" for="form3Example4cd">Repeat your password</label>
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <input type="text" id="form3Example5cd" class="form-control" name="address" required />
                                            <label class="form-label" for="form3Example5cd">Address</label>
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <input type="number" min="0" max="160" id="form3Example6cd" class="form-control" name="age" required />
                                            <label class="form-label" for="form3Example6cd">Age</label>
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <select id="inputGender" class="form-select form-control" required name="sex">
                                            </select>
                                            <label for="inputGender" class="form-label">Gender</label>
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">

                                            <select id="inputEthnicity" class="form-select form-control" required name="ethnicity" autocomplete="ethnicity">
                                            </select>
                                            <label for="inputEthnicity" class="form-label">Ethnicity</label>
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <input type="file" id="form3Example9cd" class="form-control" name="userProfilePicture" required />
                                            <label class="form-label" for="form3Example9cd">User Profile Picture</label>
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <input type="hidden" id="form3Example9cd" class="form-control" value="User" name="role" required />
                                        </div>
                                    </div>

                                    <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                        <button type="submit" class="btn btn-primary w-100">Register</button>
                                    </div>

                                    <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                        <button type="button" class="btn btn-danger w-100" onclick="window.location.assign('/Login')">Login</button>
                                    </div>
                                </form>
                            </div>
                            <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp" class="img-fluid" alt="Sample image">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<script>
    $("#form3Example9cd").change(function(event){
        console.log(URL.createObjectURL(this.files[0]));
        $(".img-fluid").attr("src",URL.createObjectURL(this.files[0]))
    });

    $.ajax({

        url:"/User/GetGenders",
        method:"GET",
        success: function(data, status, jqXHR){

            $.each(data, function(index, gender){
                $(`<option value="${gender.gender_}">${gender.gender_}</option>`).appendTo($("#inputGender"));
            });
        }
    });

     $.ajax({

        url:"/User/GetEthnicities",
        method:"GET",
        success: function(data, status, jqXHR){

            $.each(data, function(index, ethnicity){
                $(`<option value="${ethnicity.ethnicity_}">${ethnicity.ethnicity_}</option>`).appendTo($("#inputEthnicity"));
            });
        }
    });
</script>